
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <TextView
            android:id="@+id/survey123_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Survey123"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <CheckBox
            android:id="@+id/survey123_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            />

    </LinearLayout>




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/ATAK_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATAK"
            android:textStyle="bold"
            android:layout_weight="0.2"
            />


        <CheckBox
            android:id="@+id/ATAK_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <TextView
            android:id="@+id/DropBox_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DropBox"
            android:textStyle="bold"
            android:layout_weight="0.2"
            />


        <CheckBox
            android:id="@+id/DropBox_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            />

    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/Collector_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collector"
            android:textStyle="bold"
            android:layout_weight="0.2"
            />

        <CheckBox
            android:id="@+id/Collector_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            />

    </LinearLayout>










</LinearLayout>